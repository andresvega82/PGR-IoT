        android:layout_alignBottom="@+id/textView12"
        android:layout_alignEnd="@+id/editText7"
        android:textColor="@color/abc_primary_text_disable_only_material_light" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText7"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignStart="@+id/button8"
        android:textColor="@color/abc_primary_text_disable_only_material_light" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:id="@+id/button8"
        android:layout_below="@+id/editText7"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/lindo"
        android:layout_below="@+id/error"
        android:layout_alignRight="@+id/textView14"
        android:layout_alignEnd="@+id/textView14"
        android:layout_marginTop="56dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
